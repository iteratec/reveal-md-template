{
  "name": "slides-template",
  "version": "0.0.1",
  "dependencies": {
    "reveal-md": "^3.0.4"
  },
  "scripts": {
    "start": "reveal-md slides.md",
    "build": "npm start -- --static docs/",
    "pdf": "npm start -- --print slides.pdf",
    "dev": "npm start -- -w --disable-auto-open",
    "release": "f(){ npm run build && npm run pdf && git add -u && git add -A docs/ && git commit -m \"${@}\"; }; f"
  },
  "keywords": [
    "slides",
    "reveal.js",
    "talk",
    "presentation"
  ]
}
